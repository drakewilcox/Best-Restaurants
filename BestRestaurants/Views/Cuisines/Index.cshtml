@{
  Layout = "_Layout";
}
@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<h1 class="text-center">Cuisines</h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    @if (@Model.Count == 0)
    {
      <h4> No categories have been added yet! </h4>
    }
    @foreach (Cuisine cuisine in Model)
    {
      <li> @Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId }) </li>
    }
  </div>
</div>
  @Html.ActionLink("Add new Cuisine", "Create", null, htmlAttributes: new {@class="btn btn-primary btn-lg"})

  <p>@Html.ActionLink("Back to home", "Index", "Home")</p>


